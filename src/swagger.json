    "components": {
        "schemas": {
            "login": {
                "description": "La contrase√±a debe tener al menos 7 caracteres",
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "example": "jhon"
                    },
                    "email": {
                        "type": "string",
                        "example": "jhon.doe@gmail.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "1234567"
                    }
                }
            },
            "updateUser": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "example": "jhonDoe"
                    },
                    "avatar": {
                        "type": "string",
                        "example": "url"
                    }
                }
            },
            "createdProduct": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Samsung A10"
                    },
                    "description": {
                        "type": "string",
                        "example": "es un dispositivo gama baja con poco consumo"
                    },
                    "price": {
                        "type": "float",
                        "example": 150
                    },
                    "userId": {
                        "type": "integer",
                        "example": "[ 1, 2, 3 ... ]"
                    },
                    "productImg": {
                        "type": "string",
                        "example": "url"
                    }
                }
            },
            "updateDescription": {
                "type": "object",
                "properties": {
                    "description": {
                        "type": "string",
                        "example": "shalala shalala"
                    }
                }
            },
            "allProducts": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "integer",
