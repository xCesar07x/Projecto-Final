                                "username": {
                                    "type": "string",
                                    "example": "jhonDoe"
                                }
                            }
                        }
                    }
                }
            },
            "createdCart": {
                "type": "object",
                "properties": {
                    "userId": {
                        "type": "integer",
                        "example": 5
                    },
                    "totalPrice": {
                        "type": "float",
                        "example": 500
                    }
                }
            },
            "allProductsInCart": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "integer",
                            "example": 3
