                        },
                        "productId": {
                            "type": "integer",
                            "example": 1
                        },
                        "quantity": {
                            "type": "integer",
                            "example": 5
                        },
                        "price": {
                            "type": "float",
                            "example": 300
                        },
                        "status": {
                            "type": "boolean",
